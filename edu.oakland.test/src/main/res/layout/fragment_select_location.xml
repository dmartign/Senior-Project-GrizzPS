<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.oakland.test.SelectLocation$PlaceholderFragment">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUTDOOR"
            android:id="@+id/go_btn"
            android:layout_column="0"
            android:layout_span="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INDOOR"
            android:id="@+id/button"
            android:layout_column="3" />

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New Location"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/building"
            android:layout_column="1"
            android:spinnerMode="dropdown" />

        <!--<Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/roomNum"
            android:layout_below="@+id/textView"
            android:spinnerMode="dropdown"
            android:layout_toLeftOf="@+id/favorites"
            android:layout_toRightOf="@+id/textView"
            android:layout_column="0" />-->

    </TableRow>

    <!--<TableRow>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Handicap Accessibility"
            android:id="@+id/handicapText"
            android:layout_column="1" />

        <Switch
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Handicap Accessibility"
            android:id="@+id/handicap"
            android:layout_column="2"
            android:checked="false" />


    </TableRow>-->

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the building code for the building you want to navigate to:"
            android:id="@+id/textView2"
            android:layout_span="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_span="2"
            android:layout_column="2" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="start"
            android:id="@+id/start"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCurrentLocationIndoor"
            android:layout_column="2"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="destination"
            android:id="@+id/destination"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDestinationIndoor"
            android:layout_column="2"
            android:layout_span="2" />
    </TableRow>


</TableLayout>

